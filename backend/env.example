# Production environment file
# Copy this to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8034
API_WORKERS=4

# CORS Configuration (for production, specify actual domains)
CORS_ORIGINS=http://localhost:8034,http://localhost:8080

# File Storage
UPLOAD_DIR=/app/uploads
DOWNLOAD_DIR=/app/downloads
LOGS_DIR=/app/logs

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Database Configuration
DATABASE_PATH=data/barcode_generator.db
DATABASE_ENCRYPTION_KEY=
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_DIR=data/backups
DATABASE_BACKUP_RETENTION_DAYS=30
DATABASE_MAX_CONNECTIONS=10
DATABASE_TIMEOUT=30

# Security
ENABLE_DATABASE_ENCRYPTION=true
ENCRYPTION_ALGORITHM=Fernet

# Redis (if needed for caching)
# REDIS_URL=redis://redis:6379/0
